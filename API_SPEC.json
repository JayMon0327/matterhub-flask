              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "상태 필터",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "문자열 포함 검색",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "반환 개수 (기본: 200)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 5000,
              "default": 200
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/LogItem"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/logs/stats": {
      "get": {
        "summary": "로그 통계",
        "description": "시간별 로그 개수 통계를 조회합니다",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "description": "시작 시간 (ISO8601 형식)",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "종료 시간 (ISO8601 형식)",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "hour": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-10-29T13:00:00Z"
                          },
                          "count": {
                            "type": "integer",
                            "example": 1500
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/logs/files": {
      "get": {
        "summary": "파일 목록",
        "description": "시간 범위에 해당하는 로그 파일 목록을 조회합니다",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "description": "시작 시간 (ISO8601 형식)",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "종료 시간 (ISO8601 형식)",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "path": {
                            "type": "string",
                            "example": "/var/log/edge-history/2025/10/29/13.ndjson"
                          },
                          "size": {
                            "type": "integer",
                            "example": 512000
                          },
                          "mtime": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-10-29T13:00:00Z"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/history/period": {
      "get": {
        "summary": "Period History 조회",
        "description": "Period History 모드로 저장된 JSON 파일 조회. HA History API와 동일한 응답 형식 (중첩 배열). devices.json에 등록된 엔티티만 필터링하여 반환",
        "parameters": [
          {
            "name": "timestamp",
            "in": "query",
            "description": "ISO8601 형식의 타임스탬프 (예: \"2025-11-03T05:00:00Z\"). None이면 가장 최근 파일 반환",
            "schema": {
              "type": "string",
              "format": "date-time",
              "example": "2025-11-03T05:00:00Z"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공 (HA History API 형식: 중첩 배열)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/HistoryEvent"
                    }
                  },
                  "description": "각 엔티티별로 그룹화된 히스토리 이벤트 배열"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/history/period/files": {
      "get": {
        "summary": "Period History 파일 목록",
        "description": "Period History 모드로 저장된 JSON 파일 목록 조회",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "반환할 최대 파일 개수 (기본: 10, 최대: 100)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "timestamp": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-11-03T05:00:00Z"
                          },
                          "file": {
                            "type": "string",
                            "example": "/path/to/history/2025-11-03T05:00:00Z.json"
                          },
                          "size": {
                            "type": "integer",
                            "example": 512000
                          },
                          "mtime": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-11-03T05:00:00Z"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/history/period/weekly": {
      "get": {
        "summary": "최근 일주일 Period History 조회",
        "description": "Period History 모드로 저장된 데이터에서 최근 일주일간 매일 12:00시 대표 데이터 조회. HA History API와 동일한 응답 형식 (중첩 배열). devices.json에 등록된 엔티티만 필터링하여 반환",
        "responses": {
          "200": {
            "description": "성공 (HA History API 형식: 중첩 배열)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/HistoryEvent"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/history/period/monthly": {
      "get": {
        "summary": "최근 한달 Period History 조회",
        "description": "Period History 모드로 저장된 데이터에서 최근 한달간 매일 12:00시 대표 데이터 조회. HA History API와 동일한 응답 형식 (중첩 배열). devices.json에 등록된 엔티티만 필터링하여 반환",
        "responses": {
          "200": {
            "description": "성공 (HA History API 형식: 중첩 배열)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/HistoryEvent"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/history/period/daily": {
      "get": {
        "summary": "특정 날짜의 24시간 Period History 조회",
        "description": "특정 날짜의 모든 시간대(0시~23시) Period History 데이터 조회. 하루 24시간의 변화를 시간대별로 확인할 수 있습니다. devices.json에 등록된 엔티티만 필터링하여 반환",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "required": true,
            "description": "날짜 문자열 (예: \"2025-11-19\")",
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-11-19"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "date": {
                      "type": "string",
                      "format": "date",
                      "example": "2025-11-19"
                    },
                    "hours": {
                      "type": "object",
                      "description": "시간대별 데이터 (00~23)",
                      "additionalProperties": {
                        "type": "array",
                        "items": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/HistoryEvent"
                          }
                        }
                      },
                      "example": {
                        "00": [],
                        "01": [],
                        "23": []
                      }
                    }
                  },
                  "required": ["date", "hours"]
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (date 파라미터 누락)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LogItem": {
        "type": "object",
        "properties": {
          "ts": {
            "type": "string",
            "format": "date-time",
            "description": "UTC 타임스탬프 (ISO8601)",
            "example": "2025-10-29T13:00:00Z"
          },
          "device_id": {
            "type": "string",
            "description": "기기 ID (entity_id)",
            "example": "light.living_room"
          },
          "status": {
            "type": "string",
            "description": "현재 상태",
            "example": "on"
          },
          "metrics": {
            "type": ["object", "null"],
            "description": "주요 메트릭 (states 모드에서만 주로 존재)",
            "properties": {
              "temperature": {
                "type": "number",
                "example": 22.5
              },
              "humidity": {
                "type": "number",
                "example": 55
              },
              "battery": {
                "type": "number",
                "example": 80
              },
              "brightness": {
                "type": "integer",
                "example": 255
              }
            }
          },
          "attributes": {
            "type": ["object", "null"],
            "description": "전체 속성 (History 모드에서 HISTORY_NO_ATTRIBUTES=true일 경우 null)",
            "additionalProperties": true
          },
          "source": {
            "type": "string",
            "description": "데이터 소스",
            "example": "ha-history-api",
            "enum": ["edge-api", "ha-history-api"]
          },
          "version": {
            "type": "string",
            "description": "데이터 버전",
            "example": "2.0",
            "enum": ["1.0", "2.0"]
          }
        },
        "required": ["ts", "device_id", "status", "source", "version"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "오류 메시지"
          }
        }
      },
      "HistoryEvent": {
        "type": "object",
