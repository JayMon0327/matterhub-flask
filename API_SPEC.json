{
  "openapi": "3.0.0",
  "info": {
    "title": "기기 상태 히스토리 API",
    "description": "Home Assistant 기기 상태 히스토리 조회 API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8100",
      "description": "로컬 개발 서버"
    }
  ],
  "paths": {
    "/local/api/logs": {
      "get": {
        "summary": "로그 조회",
        "description": "시간 범위와 필터 조건으로 로그를 조회합니다",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "description": "시작 시간 (ISO8601 형식)",
            "schema": {
              "type": "string",
              "format": "date-time",
              "example": "2025-10-29T00:00:00Z"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "종료 시간 (ISO8601 형식)",
            "schema": {
              "type": "string",
              "format": "date-time",
              "example": "2025-10-29T23:59:59Z"
            }
          },
          {
            "name": "device_id",
            "in": "query",
            "description": "기기 ID 필터 (다중 지정 가능)",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "상태 필터",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "문자열 포함 검색",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "페이지네이션 커서",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "반환 개수 제한 (기본: 200, 최대: 5000)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 5000,
              "default": 200
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/LogItem"
                      }
                    },
                    "next_cursor": {
                      "type": "string",
                      "description": "다음 페이지 조회용 커서"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/local/api/logs/weekly": {
      "get": {
        "summary": "최근 일주일 로그 조회",
        "description": "최근 7일 동안 매일 12:00시의 대표 로그를 조회합니다",
        "parameters": [
          {
            "name": "device_id",
            "in": "query",
            "description": "기기 ID 필터 (다중 지정 가능)",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "상태 필터",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "문자열 포함 검색",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "반환 개수 제한 (기본: 200, 최대: 5000)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 5000,
              "default": 200
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/LogItem"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
