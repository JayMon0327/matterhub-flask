    "/local/api/logs/tail": {
      "get": {
        "summary": "최근 로그 조회",
        "description": "최근 N초간의 로그를 조회합니다 (최신순)",
        "parameters": [
          {
            "name": "since",
            "in": "query",
            "description": "초 단위 (기본: 3600 = 1시간)",
            "schema": {
              "type": "integer",
              "default": 3600
            }
          },
          {
            "name": "device_id",
            "in": "query",
            "description": "기기 ID 필터 (다중 지정 가능)",
